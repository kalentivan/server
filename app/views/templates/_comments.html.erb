

<section class="container">

<div class="row">
  <div class="panel">
    <% @comments.each do |comment| %>
    <div class="panel-body">
      <!-- Содержание Новостей -->
      <!--===================================================-->
      <div class="media-block">
        <a class="media-left" href="#"><img class="img-circle img-sm" alt="Профиль пользователя" src="https://bootstraptema.ru/snippets/icons/2016/mia/1.png"></a>
        <div class="media-body">
          <div class="mar-btm">
            <a href="#" class="btn-link text-semibold media-heading box-inline"><%= comment.user_id %></a>
            <p class="text-muted text-sm"><i class="fa fa-mobile fa-lg"></i><%= comment.created_at %></p>
          </div>
          <p> Text: <%= comment.comment %></p>
          <div class="pad-ver">
            <div class="btn-group">
              <a class="btn btn-sm btn-default btn-hover-success" href="#"><i class="fa fa-thumbs-up"></i></a>
              <a class="btn btn-sm btn-default btn-hover-danger" href="#"><i class="fa fa-thumbs-down"></i></a>
            </div>
            <a class="btn btn-sm btn-default btn-hover-primary" href="#">Ответить</a>
          </div>
          <hr>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>