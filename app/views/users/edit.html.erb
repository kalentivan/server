<div class="container">
    <div class="col-md-4 offset-md-4">
        <h1 class="title-lg">Введите данные</h1>
        <% if @user.errors.any? %>
            <div class="mt">
                <% @user.errors.full_messages.each do |message| %>
                    <p class="message message-alert"><%= message %></p>
                <% end %>
            </div>
        <% end %>
    </div>

<div class="container">
    <div class="mt">
        <%= form_with model: @user, data: {turbo: false} do |form| %>            
            <p> <%= form.label :name, 'Ваше имя:' %> </p>    
            <p> <%= form.text_field :name, class: 'form-text-field'%> </p>  

            <p class="mt"> <%= form.label :nickname, 'Ник на сайте' %> </p>    
            <p> <%= form.text_field :nickname, class: 'form-text-field'%> </p>   

            <p class="mt-lg text-sm">Если не хотите менять пароль, то оставьте эти поля пустыми</p>

            <p class="mt"> <%= form.label :password, 'Ваш пароль' %> </p>    
            <p> <%= form.password_field :email, password: 'form-text-field'%> </p>       

            <p class="mt"> <%= form.label :password_confirmation, 'Ваш пароль' %> </p>    
            <p> <%= form.password_field :email, password_confirmation: 'form-text-field'%> </p>       

            <p class="mt-lg">
                <%= form.submit 'Сохранить', class: 'button-save' %>
                <span class="text-link">   <%= link_to "Вернуться", :back %></span>
            </p>  
        <% end %>

        <div class="mt-lg">
            <%= button_to "Удалить пользователя", user_path(@user),
            method: :delete,
            form: {data: {turbo_confirm: "Вы точно хотите удалить пользователя?"}},
            class: 'button-delete' %>
        </div>
    </div>
</div>